{
  "name": "pey-builder",
  "version": "1.0.0",
  "description": "سیستم کامل سایت‌سازی و استخراج قالب‌ها - PEY Builder",
  "main": "extractor/puppeteer.js",
  "homepage": "https://github.com/iman-noroozi/sitebuilder",
  "repository": {
    "type": "git",
    "url": "https://github.com/iman-noroozi/sitebuilder.git"
  },
  "bugs": {
    "url": "https://github.com/iman-noroozi/sitebuilder/issues"
  },
  "scripts": {
    "start": "node extractor/puppeteer.js",
    "extract": "node extractor/puppeteer.js",
    "parse": "python extractor/parser.py",
    "build": "python builder-core/build_engine.py",
    "dev": "nodemon extractor/puppeteer.js",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --config jest.config.js",
    "test:coverage": "jest --coverage --config jest.config.js",
    "test:comprehensive": "node tests/test_node_comprehensive.js",
    "test:all": "npm run test && npm run test:comprehensive",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "setup": "npm install && pip install -r requirements.txt",
    "docker:build": "docker build -t pey-builder .",
    "docker:run": "docker run -p 8000:8000 pey-builder",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "website-extractor",
    "template-extractor",
    "site-builder",
    "puppeteer",
    "web-scraping",
    "html-css-extractor",
    "django",
    "python",
    "nodejs",
    "grapesjs",
    "drag-drop",
    "persian",
    "rtl",
    "peysan-web"
  ],
  "author": {
    "name": "Peysan Web",
    "email": "info@peysunweb.ir",
    "url": "https://peysunweb.ir"
  },
  "contributors": [
    {
      "name": "Iman Noroozi",
      "email": "iman@peysunweb.ir"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "puppeteer": "^21.11.0",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
